<h1>Listing Products</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>&nbsp</th>
      <th>Name</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:tiny) %></td>
        <td><%= product.name %></td>
        <td><%= product.try(:category).try(:name) %></td>
        <td><%= product.try(:brand).try(:name) %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to fa_icon('eye'), product %></td>
        <td><%= link_to fa_icon('pencil'), edit_product_path(product) %></td>
        <td><%= link_to fa_icon('trash'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

